  signingkey = B69EE2A1878B6426
[core]
  editor = nvim
[color]
  ui = auto
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  ls-subtrees = !"git log | grep git-subtree-dir | tr -d ' ' | cut -d ':' -f2 | sort | uniq"
  compare = log --left-right --graph --cherry-pick --oneline
[merge]
  summary = true
  tool = p4
[difftool "p4"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$LOCAL" "$PWD/$REMOTE" "$PWD/$MERGED"
  keepBackup = false
  trustExitCode = false
[mergetool "p4"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$LOCAL" "$PWD/$REMOTE" "$PWD/$MERGED"
  keepBackup = false
  trustExitCode = false
[mergetool]
  keepBackup = false
[push]
  default = matching
  followTags = true
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[url "git@github.com:"]
  insteadOf = https://github.com/
[init]
  defaultBranch = main
[pull]
  ff = only
[commit]
  gpgsign = true
