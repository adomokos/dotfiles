	tool = p4
[difftool "p4"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$LOCAL" "$PWD/$REMOTE" "$PWD/$MERGED"
	keepBackup = false
	trustExitCode = false
[mergetool "p4"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$LOCAL" "$PWD/$REMOTE" "$PWD/$MERGED"
	keepBackup = false
	trustExitCode = false
[mergetool]
	keepBackup = false
