alias vim='nvim'
alias ll='/bin/ls -Gla'
alias lltree="ls -R | grep ":" | sed -e 's/://' -e 's/[^-][^\/]*\//--/g' -e 's/^/   /' -e 's/-/|/'"

# git aliases
alias gsp='git stash pop'
alias gf='git fetch'
alias grh='git reset --hard'
alias gpom='git pull origin master'
alias gpoh='git push origin head'
alias gst="git log | grep git-subtree-dir | tr -d '' | cut -d "":"" -f2 | sort | uniq"
alias gic='git init; git add .; git commit -m "Initial commit"'

# ruby aliases
alias rsu='time bin/rspec spec'
alias rsn='time bin/rspec spec_no_rails'
alias be='bundle exec'
alias bi='bundle install --path vendor/bundle --binstubs'
alias rtest='export RAILS_ENV=test'
alias rdev='export RAILS_ENV=development'
alias rs='bundle exec rails s --binding 127.0.0.1'
alias rc='bundle exec rails c'
