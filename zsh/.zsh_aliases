# dir jumpers
alias xctags="ctags -R --languages=ruby --exclude=.git --exclude=log"
alias h='history -100 -1'

# Clojure
alias lt='time lein difftest'

# Homebrew Alias
alias ctags="`brew --prefix`/bin/ctags"

